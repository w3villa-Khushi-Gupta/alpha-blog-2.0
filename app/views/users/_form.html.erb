<%= form_with(model: @user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  
  <div class="field">
      <%= form.label :phone_no %>
      <%= form.text_field :phone_no  %>
  </div>
  
  <div class="field">
      <% if @show_flash_message%>
        <div class="alert alert-danger">
          Re-enter password to save changes
        <div>
      <%end%>

      <%= form.label :password %>
      <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
