<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1>categories</h1>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category.articles) %></td>
        <td><%= pluralize(category.articles.count, "article")%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @categories %>

